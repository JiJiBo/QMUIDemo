<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.qmuiteam.qmui.widget.QMUIProgressBar
        android:id="@+id/pb_rect"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:textSize="20sp"
        app:qmui_background_color="#aaa"
        app:qmui_max_value="100"
        app:qmui_progress_color="#3cf"
        app:qmui_type="type_rect" />

    <com.qmuiteam.qmui.widget.QMUIProgressBar
        android:id="@+id/pb_circle"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="30dp"
        android:textColor="#999"
        android:textSize="40sp"
        app:qmui_background_color="#ccc"
        app:qmui_max_value="100"
        app:qmui_progress_color="#2fc"
        app:qmui_stroke_width="20dp"
        app:qmui_type="type_circle" />

</LinearLayout>